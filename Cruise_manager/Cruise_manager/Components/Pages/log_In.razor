@page "/Login"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<style>
    html, body {
        height: 100%;
        margin: 0;
        z-index: 0;
    }

    .center-container {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        display: flex;
        justify-content: center;
        align-items: center;
        pointer-events: auto;
        z-index: 10;
    }

    .div {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: repeat(6, auto);
        align-self: center;
        border-style: solid;
        border-color: lightblue;
        border-radius: 12px;
        padding: 30px;
        width: 400px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        background-color: white;
        transform: translateY(-10%);
        position: relative;
        z-index: 1;
    }

    label {
        margin-bottom: 5px;
    }

    input {
        margin-bottom: 10px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .login_logo {
        position: absolute;
        top: -33%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 11;
    }
    .sign {
        text-align: center;
    }
</style>

<div class="center-container">
    <img src="Resources/logo.png" class="login_logo" height="100px" width="100px">
    <div class="div">
        <label>Name</label>
        <input type="text" />
        <label>Password</label>
        <input type="password" />
        <button class="button" @onclick="OfYouGo">Log In</button>
    </div>
</div>

@code {
    public void OfYouGo()
    {
        NavigationManager.NavigateTo("/Signup?fromLogin=true");
    }
}