@inherits LayoutComponentBase

<script>
    function toggleNavVisibility() {
        var navElement = document.getElementsByClassName("sidebar")[0];
        navElement.style.display = (navElement.style.display === "none") ? "block" : "none";
    }
</script>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row" style="display: inline-flex; inline-size: 100%">
            <img src="Resources/logo.png" height="50px" width="50px" style="align-self: flex-start">
            <h1 style="right: 40px; align-self: flex-end">Cruiser</h1>
            <input type="checkbox" title="Navigation menu" class="navbar-toggler" onclick="toggleNavVisibility()" />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
